@using tutor.Models
@{
    ViewBag.Title = "StudyPlaces";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var db = new ApplicationDbContext();
}

<div class="container" style="margin-top:30px; ">
    <div class="row border">
        <div class="bg-dark">
            <h1 style="margin:10px;color:white">Study Places</h1>
        </div>
        @foreach (var studyPlace in db.StudyPlaces)
        {
            <div class="row featurette">
                <div class="col-md-7">
                    <h2 class="featurette-heading">@studyPlace.Name</h2>
                    <h4><span class="text-muted">Location: @studyPlace.Location</span></h4>
                    <h4><span class="text-muted">Phone Number: @studyPlace.PhoneNumber</span></h4>
                </div>
                <div class="col-md-5">
                    @*<svg class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" width="500" height="500" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 500x500" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#eee" /><text x="50%" y="50%" fill="#aaa" dy=".3em">500x500</text></svg>*@
                    <img src="~/Uploads/@studyPlace.Image" style="max-height:500px;max-width:500px; margin:20px;" />
                </div>
            </div>
            <hr />
        }
    </div>
</div>
