@model tutor.Models.EditPricingViewModel

@{
    ViewBag.Title = "Edit Pricing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container " style="margin-top:30px">
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h2>Edit Pricing</h2>
            <dv>
                <h3 id="update-status">@ViewBag.Message</h3>
            </dv>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                @Html.LabelFor(model => model.OneHourPrice, htmlAttributes: new { @class = "form-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OneHourPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OneHourPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.TwoHourPrice, htmlAttributes: new { @class = "form-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TwoHourPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TwoHourPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.ThreeHourPrice, htmlAttributes: new { @class = "form-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ThreeHourPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ThreeHourPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
        }
    </div>
</div>


@section Scripts{
    <script>
        $(function () {
            $(document).ready(function () {
                if (!$("#update-status").text() == "") {
                    $("#update-status").addClass("alert alert-success");
                }
            });
        });
    </script>
}