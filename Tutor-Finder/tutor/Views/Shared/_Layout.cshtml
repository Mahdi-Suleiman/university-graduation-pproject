<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @@media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>

    @RenderSection("Styles",required:false)
    <!-- Custom styles for this template -->
    <link href="~/Content/carousel.css" rel="stylesheet" type="text/css"/>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Tutor Finder</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Home/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/Home/Tutors">Tutors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/Home/StudyPlaces" tabindex="-1">Studey Places</a>
                        </li>
                    </ul>
                        @using (Html.BeginForm("Search", "Home", FormMethod.Post, new {@class= "d-flex ms-auto mb-md-0" }))
                        {
                            <input class="form-control me-2" type="text" name="searchName" id="searchName" placeholder="Search"/>
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        }

                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
        <!-- FOOTER -->
        @*<footer class="container">
            <p class="float-end"><a href="#">Back to top</a></p>
            <p>&copy; 2017–2021 Company, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
        </footer>*@
    </main>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js" type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

