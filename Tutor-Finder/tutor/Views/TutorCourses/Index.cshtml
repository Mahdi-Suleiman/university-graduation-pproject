@model IEnumerable<tutor.Models.TutorCourses>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top:30px;">
    <div class="row">

        <h2>Tutor Courses</h2>

        <p>
            @Html.ActionLink("Add Course for Tutor", "Create", null, new { @class = "btn btn-success" })
        </p>
        <table class="table table-hover table-striped table-bordered" >
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Course.Name)
                </th>
                <th>
                    Tutor
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>
                        @item.Tutor.FirstName @item.Tutor.LastName 
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.CourseId+ "," + item.TutorId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>


    </div>
</div>