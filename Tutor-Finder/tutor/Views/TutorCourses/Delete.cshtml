@model tutor.Models.TutorCourses

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:30px;">
    <div class="row">

        <h2>Delete Tutor Course</h2>

        <h3>Are you sure you want to delete this course from @Model.Tutor.FirstName @Model.Tutor.LastName courses ?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Course.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Course.Name)
                </dd>

                <dt>
                    Tutor
                </dt>

                <dd>
                    @Model.Tutor.FirstName @Model.Tutor.LastName
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>

    </div>
</div>